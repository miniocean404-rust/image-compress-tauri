{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "image-compress",
  "version": "0.0.2",
  "identifier": "com.miniocean.compress.image",
  "mainBinaryName": "image-compress-tauri",
  "build": {
    "beforeDevCommand": "pnpm vite:dev",
    "beforeBuildCommand": "pnpm vite:build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "图片压缩",
        "center": true,
        "fullscreen": false,
        "dragDropEnabled": true,
        "resizable": true,
        "width": 800,
        "height": 600,
        "visible": true,
        "decorations": true,
        "userAgent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36"
      }
    ],
    "trayIcon": {
      "iconPath": "icons/32x32.png",
      "title": "图片压缩",
      "iconAsTemplate": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true,
    "windows": {
      "wix": {
        "language": "zh-CN"
      },
      "nsis": {
        "displayLanguageSelector": true,
        "languages": [
          "SimpChinese"
        ]
      }
    },
    "macOS": {
      "dmg": {}
    },
    "linux": {
      "deb": {},
      "appimage": {}
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEZFMTNGMDUyNTU3RTUyNTEKUldSUlVuNVZVdkFUL2xKMkxrSm4wY3Q4RVpJZ2tWOGlvSm44TC9ZdnF6aHI4emNPeE5HY1JvL3IK",
      "endpoints": [
        "https://miniocean404-rust.github.io/image-compress-tauri/install.json"
      ],
      "windows": {
        "installMode": "basicUi",
        "installerArgs": []
      }
    }
  }
}
